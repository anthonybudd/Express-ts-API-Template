{
  "name": "express-api-template",
  "version": "1.0.0",
  "author": "Anthony Budd",
  "description": "Production-ready minimal REST API template using Express.js, Sequelize and MySQL.",
  "main": "src/index.ts",
  "license": "MIT",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/anthonybudd/Express-ts-API-Template.git"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint --fix src test",
    "exec:lint": "docker exec -ti express-api npm run lint",
    "jwt": "node ./src/scripts/jwt.js",
    "exec:jwt": "docker exec -ti express-api npm run jwt",
    "env": "./src/scripts/env",
    "generate": "docker exec -ti express-api ts-node ./src/scripts/generate.ts",
    "openapispec": "ts-node ./src/scripts/openapispec.ts",
    "exec:openapispec": "docker exec -ti express-api npm run openapispec",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "./src/scripts/seed",
    "db:refresh": "./src/scripts/refresh",
    "exec:db:refresh": "docker exec -ti express-api npm run db:refresh",
    "test": "export NODE_ENV=test && npm run db:refresh && mocha --timeout 10000 --config ./tests/runners/mocha/.mocharc.jsonc",
    "exec:test": "docker exec -ti express-api npm run test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@catalystic/json-to-yaml": "^1.0.0",
    "@types/express-fileupload": "^1.5.0",
    "@types/mustache": "^4.2.5",
    "axios": "^1.7.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.0",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "inflection": "^3.0.0",
    "minimist": "^1.2.8",
    "mocha-ts": "^0.0.0",
    "morgan": "^1.10.0",
    "mustache": "^4.2.0",
    "mysql2": "^3.9.7",
    "node-cron": "^4.1.0",
    "otpauth": "^9.3.6",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6",
    "swagger-jsdoc": "^6.2.8"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/minimist": "^1.2.5",
    "@types/mocha": "^7.0.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.12",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.11.10",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "chai": "^4.2.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  }
}
