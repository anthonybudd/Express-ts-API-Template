{
  "name": "express-api-template",
  "version": "1.0.0",
  "author": "Anthony Budd",
  "description": "Production-ready minimal REST API template using Express.js, Sequelize and MySQL.",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "start:dist": "node dist/src/index.js",
    "build": "tsc",
    "lint": "eslint --fix src test",
    "_lint": "docker exec -ti express-api npm run lint",
    "jwt": "node ./src/scripts/jwt.js",
    "_jwt": "docker exec -ti express-api npm run jwt",
    "env": "./src/scripts/env",
    "generate": "docker exec -ti express-api ts-node ./src/scripts/generate.ts",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "./src/scripts/seed",
    "db:refresh": "./src/scripts/refresh",
    "_db:refresh": "docker exec -ti express-api npm run db:refresh",
    "index": "docker exec -ti express-api /bin/bash -c \"ts-node ./src/scripts/modelIndex.ts --model=\"${npm_config_model}\" --prop=\"${npm_config_prop}\" --value=\"${npm_config_value}\"\"",
    "create": "docker exec -ti express-api /bin/bash -c \"ts-node ./src/scripts/modelNew.ts --model=\"${npm_config_model}\" | vipe | base64 | ts-node ./src/scripts/modelCreate.ts --model=\"${npm_config_model}\"\"",
    "get": "docker exec -ti express-api /bin/bash -c \"ts-node ./src/scripts/modelGet.ts --model=\"${npm_config_model}\" --id=\"${npm_config_id}\"\"",
    "edit": "docker exec -ti express-api /bin/bash -c \"ts-node ./src/scripts/modelGet.ts --model=\"${npm_config_model}\" --id=\"${npm_config_id}\" | vipe | base64 | ts-node ./src/scripts/modelUpdate.ts --model=\"${npm_config_model}\" --id=\"${npm_config_id}\"\"",
    "delete": "docker exec -ti express-api /bin/bash -c \"ts-node ./src/scripts/modelDelete.ts --model=\"${npm_config_model}\" --id=\"${npm_config_id}\"\"",
    "test": "DOTENV_CONFIG_PATH=.env.test jest --forceExit",
    "_test": "docker exec -ti express-api npm run test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/anthonybudd/express-api-template.git"
  },
  "license": "MIT",
  "dependencies": {
    "@types/express-fileupload": "^1.5.0",
    "@types/mustache": "^4.2.5",
    "axios": "^1.7.2",
    "bcrypt-nodejs": "^0.0.3",
    "change-case": "^5.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.0",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "inflection": "^3.0.0",
    "minimist": "^1.2.8",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "mustache": "^4.2.0",
    "mysql2": "^3.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/minimist": "^1.2.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.12",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.11.10",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  }
}