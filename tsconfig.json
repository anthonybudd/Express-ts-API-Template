{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
  ],
  "exclude": ["./src/scripts/**/*"],
  "files":["src/types.d.ts"]  
}
